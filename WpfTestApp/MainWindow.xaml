<Window Name="mainWindow" x:Class="WpfTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTestApp"
        xmlns:appShared="clr-namespace:AppShared;assembly=AppShared"
        xmlns:controls="clr-namespace:Common.Controls;assembly=Common"
        xmlns:interfaces="clr-namespace:AppShared.Interfaces;assembly=AppShared"
        xmlns:types="clr-namespace:AppShared.Types;assembly=AppShared"
        xmlns:common="clr-namespace:Common;assembly=Common"
        MinWidth="1200"
        MinHeight="800"
        mc:Ignorable="d" FontSize="20"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
<common:TestO LifetimeScope="{appShared:LifetimeScope}" x:Key="test"/>
        <types:ResolveServiceList x:Key="r">
            <appShared:ResolveService ServiceType="{x:Type interfaces:IObjectIdProvider}">
                <appShared:App.LifetimeScope><Binding ElementName="mainWindow" Path="(appShared:App.LifetimeScope)"/></appShared:App.LifetimeScope>
                </appShared:ResolveService>
    </types:ResolveServiceList>
    </Window.Resources>
    <DockPanel LastChildFill="True" DataContext="{Binding ElementName=mainWindow, Path=(appShared:App.LifetimeScope)}">
        <StackPanel  DockPanel.Dock="Top" Orientation="Horizontal">
            <TextBlock Text="{Binding Path=Tag}"/>
            <TextBlock Text="{Binding Source={appShared:LifetimeScope}, Path=Tag}"/>

        </StackPanel>
        <TabControl Style="{StaticResource TabControlStyle1}">
            <TabItem Header="Registrations">
                <controls:Registrations><appShared:App.LifetimeScope><Binding ElementName="mainWindow" Path="(appShared:App.LifetimeScope)"/></appShared:App.LifetimeScope></controls:Registrations>
            </TabItem>
            <TabItem Header="Y">
                <StackPanel DataContext="{StaticResource test}">
                    <TextBlock Text="{Binding Path=LifetimeScope.Tag}"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="X">
                <ListView ItemsSource="{Binding Source={StaticResource r}}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn DisplayMemberBinding="{Binding Source={appShared:ObjectId}}"/>
                            <GridViewColumn DisplayMemberBinding="{Binding Path=ServiceType}"/>
                            <GridViewColumn DisplayMemberBinding="{Binding Path=LifetimeScope.Tag}"/>
                            <GridViewColumn DisplayMemberBinding="{Binding ConverterParameter={appShared:LifetimeScope}, Converter={StaticResource MyConverter}}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
